{
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.hg/store/**": true,
    ".flatpak/**": true,
    "_build/**": true
  },
  "mesonbuild.configureOnOpen": false,
  "mesonbuild.configureOptions": ["-Ddemo=true"],
  "mesonbuild.buildFolder": "_build",
  "[meson]": {
    "editor.defaultFormatter": "mesonbuild.mesonbuild",
    "mesonbuild.linter.muon.enabled": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "clangd.arguments": ["--compile-commands-dir=_build"],
  "C_Cpp.default.compileCommands": "_build/vscode_compile_commands.json",
  "[vala]": {
    "editor.defaultFormatter": "prince781.vala"
  }
}
