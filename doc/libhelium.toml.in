[library]
version = "@VERSION@"
description = "The Application Framework for tauOS apps"
authors = "Fyra Labs"
license = "LGPL-3-or-later"
browse_url = "https://github.com/tau-OS/libhelium"
repository_url = "https://github.com/tau-OS/libhelium.git"
website_url = "https://docs.developers.tauos.co/libhelium"
logo_url = "libhelium.svg"
dependencies = [
  "GObject-2.0",
  "Gtk-4.0",
]
devhelp = true
search_index = true

[dependencies."GObject-2.0"]
name = "GObject"
description = "The base type system library"
docs_url = "https://developer.gnome.org/gobject/stable"

[dependencies."Gtk-4.0"]
name = "GTK"
description = "The GTK toolkit"
docs_url = "https://docs.gtk.org/gtk4/"

[theme]
name = "basic"
show_index_summary = true
show_class_hierarchy = true

[source-location]
# The base URL for the web UI
base_url = "https://github.com/tau-OS/libhelium/blob/main/"
file_format = "{filename}#L{line}"

[extra]
urlmap_file = "urlmap.js"
content_images = [
  "libhelium.svg",
]